<?xml version='1.0' encoding='utf-8'?>
<widget id="com.monash.MARA" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="android-minSdkVersion" value="15" />
    <name>MARA</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="www/img/splash-land-hdpi.png" density="land-hdpi"/>
		<splash src="www/img/splash-land-ldpi.png" density="land-ldpi"/>
		<splash src="www/img/splash-land-mdpi.png" density="land-mdpi"/>
		<splash src="www/img/splash-land-xhdpi.png" density="land-xhdpi"/>

		<splash src="www/img/splash-port-hdpi.png" density="port-hdpi"/>
		<splash src="www/img/splash-port-ldpi.png" density="port-ldpi"/>
		<splash src="www/img/splash-port-mdpi.png" density="port-mdpi"/>
		<splash src="www/img/splash-port-xhdpi.png" density="port-xhdpi"/>

        <icon src="www/img/logo-hdpi.png" density="hdpi" />
        <icon src="www/img/logo-ldpi.png" density="ldpi" />
        <icon src="www/img/logo-mdpi.png" density="mdpi" />
        <icon src="www/img/logo-xhdpi.png" density="xhdpi" />
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <splash src="www/img/screen.png" width="320" height="480"/>
        <splash src="www/img/screen.png" width="640" height="960"/>
        <splash src="www/img/screen.png" width="768" height="1024"/>
        <splash src="www/img/screen.png" width="1536" height="2048"/>
        <splash src="www/img/screen.png" width="1024" height="768"/>
        <splash src="www/img/screen.png" width="2048" height="1536"/>
        <splash src="www/img/screen.png" width="640" height="1136"/>
        <splash src="www/img/screen.png" width="750" height="1334"/>
        <splash src="www/img/screen.png" width="1242" height="2208"/>
        <splash src="www/img/screen.png" width="2208" height="1242"/>
    </platform>
    <!-- This writes to individual platforms but the screen sizes are weird
        <preference name="SplashScreen" value="screen" /> 
    -->
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="1800" />
     <preference name="FadeSplashScreen" value="false"/>
     <preference name="SplashShowOnlyFirstTime" value="false" />
     <preference name="ShowSplashScreenSpinner" value="false" />


</widget>


